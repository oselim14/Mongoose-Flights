<%- include('../partials/header') %>

<h1 id="flight-list">Flight List</h1>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f){ %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightno %></td>
        <td <%- f.departs < new Date ? 'class="passed"' : '' %>><%- f.departs %></td>
        <td><a href="/flights/<%= f.id %>">DETAILS</a></td>
      </tr>
    <% }) %>  
  </tbody>
</table>

<%- include('../partials/footer') %>